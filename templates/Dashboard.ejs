<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quiz Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
  </head>
  <body class="min-h-screen bg-gray-100">
    <%- include('partials/navbar.ejs'); %>
    <div class="max-w-7xl container mx-auto px-4 py-8">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Quiz Dashboard</h1>
        <p class="text-gray-600">Analytics and Insights</p>
      </div>

      <!-- Stats Overview -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow-lg p-6">
          <div class="flex items-center space-x-4">
            <div class="p-3 rounded-full bg-blue-100 text-blue-600">
              <i data-lucide="users"></i>
            </div>
            <div>
              <p class="text-sm text-gray-600">Total Users</p>
              <p class="text-2xl font-semibold text-gray-900" id="totalUsers">150</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-6">
          <div class="flex items-center space-x-4">
            <div class="p-3 rounded-full bg-blue-100 text-blue-600">
              <i data-lucide="check-circle"></i>
            </div>
            <div>
              <p class="text-sm text-gray-600">Completed Quizzes</p>
              <p class="text-2xl font-semibold text-gray-900" id="completedQuizzes">89</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-6">
          <div class="flex items-center space-x-4">
            <div class="p-3 rounded-full bg-blue-100 text-blue-600">
              <i data-lucide="award"></i>
            </div>
            <div>
              <p class="text-sm text-gray-600">Average Score</p>
              <p class="text-2xl font-semibold text-gray-900" id="averageScore">75%</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-6">
          <div class="flex items-center space-x-4">
            <div class="p-3 rounded-full bg-blue-100 text-blue-600">
              <i data-lucide="clock"></i>
            </div>
            <div>
              <p class="text-sm text-gray-600">Verified Users</p>
              <p class="text-2xl font-semibold text-gray-900" id="verifiedUsers">120</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Charts -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="bg-white rounded-lg shadow-lg p-6">
          <h2 class="text-xl font-semibold mb-4 text-gray-800">Score Distribution</h2>
          <div id="scoreChart" class="h-80"></div>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-6">
          <h2 class="text-xl font-semibold mb-4 text-gray-800">Quiz Completion Trend</h2>
          <div id="trendChart" class="h-80"></div>
        </div>
      </div>
    </div>

    <script src="main.js"></script>
  </body>
</html>